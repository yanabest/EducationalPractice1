<Page x:Class="EducationalPractice.PagesApp.AddProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EducationalPractice.PagesApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddProductPage">

    <Grid>
        <StackPanel>
            <TextBlock Text="Name"/>
            <TextBox x:Name="TxtName" PreviewTextInput="OnlyText_Click"/>
            <TextBlock Text="Price"/>
            <TextBox x:Name="TxtPrice" PreviewTextInput="Char_Click"/>
            <TextBlock Text="Description"/>
            <TextBox x:Name="TxtDescription" PreviewTextInput="OnlyText_Click"/>
            <TextBlock Text="Count"/>
            <TextBox x:Name="TxtCount"  PreviewTextInput="Char_Click"/>
            <TextBlock Text="Type"/>
            <ComboBox x:Name="CbType"/>
            <Button Content="Select Photo" Click="Button_Click"/>
            <Button Content="Save in Base" Click="Add_Click"/>
        </StackPanel>
    </Grid>
</Page>
